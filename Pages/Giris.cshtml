@page
@model UcakBiletiSistemi.Pages.GirisModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card-body">
                
                @if (!string.IsNullOrEmpty(Model.HataMesaji))
                {
                    <div class="alert alert-danger">@Model.HataMesaji</div>
                }

                <form method="post" asp-page-handler="GirisYap"> 
                    
                    <div class="mb-3">
                        <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
                        <input type="text" asp-for="KullaniciAdi" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Sifre" class="form-label">Şifre</label>
                        <input type="password" asp-for="Sifre" class="form-control" required />
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">Giriş Yap</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>